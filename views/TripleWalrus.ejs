<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Triple Walrus!</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/animation1.css">
    <link rel="stylesheet" href="stylesheets/animation2.css">
    <link rel="stylesheet" href="stylesheets/animation3.css">
</head>

<body>
    <form action="/" method="post">
        <div id="bodyWrapper">
            <h1 id="Accent">Triple Walrus</h1>
            <h1 id="title">Triple Walrus</h1>
            <div id="slotMachineBackboard">
                <div id="reelHoldster">
                    <div class="reels">
                        <div id="winLine1">Spin</div>
                        <div class="reelSymbal animation1"></div>
                        <div class="reelSymbal animation2"></div>
                        <div class="reelSymbal animation3"></div>
                        <div class="reelSymbal animation4"></div>
                        <div class="reelSymbal animation5"></div>
                        <div class="reelSymbal animation6"></div>
                        <div class="reelSymbal animation7"></div>
                        <div class="reelSymbal animation8"></div>
                        <div class="reelSymbal animation9"></div>
                        <div class="reelSymbal animation10"></div>
                    </div>
                    <div class="reels">
                        <div id="winLine2">To</div>
                        <div class="reelSymbal animation11"></div>
                        <div class="reelSymbal animation12"></div>
                        <div class="reelSymbal animation13"></div>
                        <div class="reelSymbal animation14"></div>
                        <div class="reelSymbal animation15"></div>
                        <div class="reelSymbal animation16"></div>
                        <div class="reelSymbal animation17"></div>
                        <div class="reelSymbal animation18"></div>
                        <div class="reelSymbal animation19"></div>
                        <div class="reelSymbal animation20"></div>
                    </div>
                    <div class="reels">
                        <div id="winLine3">Play!</div>
                        <div class="reelSymbal animation21"></div>
                        <div class="reelSymbal animation22"></div>
                        <div class="reelSymbal animation23"></div>
                        <div class="reelSymbal animation24"></div>
                        <div class="reelSymbal animation25"></div>
                        <div class="reelSymbal animation26"></div>
                        <div class="reelSymbal animation27"></div>
                        <div class="reelSymbal animation28"></div>
                        <div class="reelSymbal animation29"></div>
                        <div class="reelSymbal animation30"></div>
                    </div>
                </div>
                <div id="uiInline">
                    <div class="winsCollum">
                        <div>
                            <div>Last Win:</div>
                            <div>%wins%</div>
                        </div>
                        <div>
                            <div>Total Winnings:</div>
                            <div>%tWins%</div>
                        </div>
                    </div>
                    <button disabled id="spinButton">Spin!</button>
                    <div class="winsCollum">
                        <div>Current Bet</div>
                        <input type="number" value="1" id="tokenInput" name="tokenInput" min="1" max="5" required>
                    </div>
                    <div class="winsCollum">
                        <div>Tokens</div>
                        <%= data.tokens %>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            var spinButton = document.getElementById('spinButton');

                            setTimeout(function () {
                                spinButton.removeAttribute('disabled');
                            }, 5000);
                        });
                    </script>
</body>

</html>